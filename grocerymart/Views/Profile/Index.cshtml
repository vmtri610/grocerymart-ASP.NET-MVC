</script>

@functions {

    public string FormatPhoneNumber(string phoneNumber)
    {
        if (string.IsNullOrEmpty(phoneNumber))
        {
            return phoneNumber;
        }

        // Example: Format phone number as (XXX) XXX-XXXX
        return string.Format("{0:(###) ###-####}", long.Parse(phoneNumber.Replace(" ", "").Replace("+", "").Replace("-", "")));
    }

}