                <div class="top-act">
                    <a asp-controller="Login" asp-action="Index" class="btn btn--text d-md-none">Sign In</a>
                    <a asp-controller="SignUp" asp-action="Index" class="top-act__sign-up btn btn--primary">Sign Up</a>
