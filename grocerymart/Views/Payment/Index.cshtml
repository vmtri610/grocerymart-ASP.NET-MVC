<script>

    document.querySelectorAll('.payment').forEach(button => {
        button.addEventListener('click', async (event) => {
            const response = await fetch(`/Payment/Payment`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            });

            if (response.ok) {
                window.location.href = '/Home';
            }
        });
    });


</script>



