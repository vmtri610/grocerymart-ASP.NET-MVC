@using Newtonsoft.Json
@model grocerymart.ViewModel.CartViewModel

@{
    var subtotal = Model.ProducsInCart.Sum(product => product.Price * product.Quantity);

    var listAddresses = Context.Session.GetString("Addresses");
    var addresses = new List<AddressModel>();
    if (!string.IsNullOrEmpty(listAddresses))
    {
        addresses = JsonConvert.DeserializeObject<List<AddressModel>>(listAddresses);
    }
}
<link rel="stylesheet" href="~/css/checkout.css"/>

<div class="container">
    <div class="checkout-container">
        <div class="row">
            <div class="left">
                <div class="cart-info">
                    <div class="cart-info__top">
                        <h2 class="cart-info__heading cart-info__heading--lv2">
                            1. Shipping, arrives
                            between @DateTime.Now.ToString("ddd, MMM dd") — @DateTime.Now.AddDays(7).ToString("ddd, MMM dd")
                        </h2>
                        @* <a class="cart-info__edit-btn" href="~/shipping"> *@
                        @*     <img class="icon" src="~/assets/icons/edit.svg" alt=""> *@
                        @*     Edit *@
                        @* </a> *@
                    </div>

                    @foreach (var address in addresses)
                    {
                        <article class="payment-item">
                            <div class="payment-item__info">
                                <h3 class="payment-item__title">@address.Type</h3>
                                <p class="payment-item__desc">@address.Address, @address.City, @address.State</p>
                            </div>
                        </article>
                    }
                </div>

                <div class="cart-info">
                    <h2 class="cart-info__heading cart-info__heading--lv2">2. Shipping method</h2>
                    <div class="cart-info__separate"></div>
                    <h3 class="cart-info__sub-heading">Available Shipping method</h3>

                    <!-- Payment item 3 -->
                    <label>
                        <article class="payment-item payment-item--pointer">
                            <img src="~/assets/img/delivery-1.png" alt="" class="payment-item__thumb">
                            <div class="payment-item__content">
                                <div class="payment-item__info">
                                    <h3 class="payment-item__title">Fedex Delivery</h3>
                                    <p class="payment-item__desc payment-item__desc--low">
                                        Delivery: 2-3 days work
                                    </p>
                                </div>

                                <span class="cart-info__checkbox payment-item__checkbox">
                                    <input type="radio" name="delivery-method" checked
                                           class="cart-info__checkbox-input payment-item__checkbox-input">
                                    <span class="payment-item__cost">Free</span>
                                </span>
                            </div>
                        </article>
                    </label>

                    <!-- Payment item 4 -->
                    <label>
                        <article class="payment-item payment-item--pointer">
                            <img src="~/assets/img/delivery-2.png" alt="" class="payment-item__thumb">
                            <div class="payment-item__content">
                                <div class="payment-item__info">
                                    <h3 class="payment-item__title">DHL Delivery</h3>
                                    <p class="payment-item__desc payment-item__desc--low">
                                        Delivery: 2-3 days work
                                    </p>
                                </div>

                                <span class="cart-info__checkbox payment-item__checkbox">
                                    <input type="radio" name="delivery-method"
                                           class="cart-info__checkbox-input payment-item__checkbox-input">
                                    <span class="payment-item__cost">@string.Format("{0:N0}đ", 30000)</span>
                                </span>
                            </div>
                        </article>
                    </label>
                </div>
            </div>
            <div class="right">
                <div class="cart-info">
                    <h2 class="cart-info__heading cart-info__heading--lv2">Payment Details</h2>
